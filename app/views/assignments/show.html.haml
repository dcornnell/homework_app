%h1
	=@assignment.name
-if current_user.admin == "teacher"
	-@assignment.homeworks.each do |h|
		=h.title
		%br
		=h.status
		=h.user_id

=form_for @new_homework, url: homeworks_path, method: :post do |f|
	= hidden_field_tag :assignment_id, @assignment.id
	Title
	%br
	=f.text_field :title
	%br
	Github Link:
	%br
	=f.text_field :github_link
	%br
	Heroku Link:
	%br
	=f.text_field :heroku_link
	%br
	Notes:
	%br
	=f.text_area :notes
	%br
	=f.submit "submit!"



	


	